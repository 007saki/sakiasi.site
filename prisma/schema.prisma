generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id                Int      @id @default(autoincrement())
  certificate_desc  String
  date              DateTime
  institution       String
  name              String
  qualificationType String
  status            String
  category          String
  certificate_id    String?
}

model Experience {
  id            Int       @id @default(autoincrement())
  position      String
  company       String
  department    String?
  startDate     DateTime
  endDate       DateTime?
  description   String?
  employer_logo String?
  image_detail        ImageDetail? @relation(fields: [image_id], references: [id])
  image_id Int?
}

model Image {
  id Int @id @default(autoincrement())
  google_id String
  image_detail ImageDetail[]
}

model ImageDetail {
  id Int @id @default(autoincrement())
  name String
  image_description String
  experience_id Experience[]
  
  image Image @relation(fields: [image_id], references: [id])
  image_id Int
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int?
  User      User?   @relation(fields: [authorId], references: [id])
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  Post  Post[]
}

enum Status {
  COMPLETE
  IN_PROGRESS
}
