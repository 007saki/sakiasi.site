


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id                Int      @id @default(autoincrement())
  certificate_desc  String
  date              DateTime
  institution       String
  name              String
  qualificationType String
  status            String
  category          String
  certificate_id    String?
}

model Experience {
  id            Int       @id @default(autoincrement())
  position      String
  company       String
  department    String?
  startDate     DateTime
  endDate       DateTime?
  description   String?
  employer_logo String?
  image_to_experience ImageToExperience[]
}

model Image {
  id Int @id @default(autoincrement())
  src String
  image_to_experience ImageToExperience[]
}

model ImageToExperience {
  id Int @id @default(autoincrement())
  experience Experience @relation(fields: [experience_id],references: [id])
  experience_id Int
  image Image @relation(fields: [image_id],references: [id])
  image_id Int
}


model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int?
  User      User?   @relation(fields: [authorId], references: [id])
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  Post  Post[]
}

enum Status {
  COMPLETE
  IN_PROGRESS
}